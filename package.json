{
  "name": "kv-store-db",
  "version": "1.0.1",
  "description": "A fast, easy-to-use, and lightweight in-memory key-value datastore for node.js",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf ./data && rimraf ./dist",
    "start:dev": "npm run clean && ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start": "node .",
    "prestart": "npm run clean && npm run build",
    "test:dev": "jest --detectOpenHandles ./src/*",
    "test": "npm run build && jest --detectOpenHandles ./dist/*",
    "restart": "npm start",
    "prod": "npm run build && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucivuc/kv-store-db.git"
  },
  "keywords": [
    "kv",
    "db",
    "kvdb",
    "in-memory",
    "store",
    "database",
    "kv store",
    "kv store db",
    "key value database",
    "key value store database"
  ],
  "author": "Lucian Vuc",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.4.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "path": "^0.12.7",
    "uuid": "^9.0.0"
  }
}